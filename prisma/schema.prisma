generator client {
  provider        = "prisma-client-js"
  output          = "../app/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  createdAt                   DateTime              @default(now())
  updatedAt                   DateTime              @updatedAt
  id                          String                @id @default(cuid())
  email                       String?               @unique
  mobile                      String?
  name                        String?
  password                    String?
  schoolId                    String?
  role                        Role
  leaveAprrover               Boolean               @default(false)
  subjectsTaught              String?
  accounts                    Account[]
  teacherAppointments         Appointment[]         @relation("TeacherAppointments")
  attendances                 Attendance[]          @relation("TeacherAttendance")
  certificatesIssued          Certificate[]         @relation("CertificateIssuer")
  certificateTemplatesCreated CertificateTemplate[] @relation("CertificateTemplateCreator")
  sentMessages                ChatMessage[]         @relation("MessageSender")
  assignedClasses             Class[]               @relation("TeacherClass")
  events                      Event[]
  homeworks                   Homework[]            @relation("HomeworkCreator")
  leavesApproved              LeaveRequest[]        @relation("ApprovedLeaves")
  leavesApplied               LeaveRequest[]        @relation("TeacherLeaves")
  marks                       Mark[]                @relation("TeacherMarks")
  newsFeedsCreated            NewsFeed[]            @relation("NewsFeedCreator")
  sessions                    Session[]
  student                     Student?
  tcApprovals                 TransferCertificate[] @relation("TCApprover")
  tcRequests                  TransferCertificate[] @relation("TCRequester")
  school                      School?               @relation(fields: [schoolId], references: [id])
  adminSchools                School[]              @relation("SchoolAdmin")
  teacherSchools              School[]              @relation("SchoolTeacher")
}

model LeaveRequest {
  id         String      @id @default(cuid())
  teacherId  String
  approverId String?
  schoolId   String
  leaveType  LeaveType
  reason     String
  fromDate   DateTime
  toDate     DateTime
  status     LeaveStatus @default(PENDING)
  remarks    String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  days       String?
  approver   User?       @relation("ApprovedLeaves", fields: [approverId], references: [id])
  school     School      @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacher    User        @relation("TeacherLeaves", fields: [teacherId], references: [id], onDelete: Cascade)

  @@index([teacherId])
  @@index([schoolId])
  @@index([status])
  @@index([fromDate, toDate])
}

model School {
  id                   String                @id @default(cuid())
  name                 String
  address              String
  location             String
  createdAt            DateTime              @default(now())
  city                 String?
  district             String?
  icon                 String?
  pincode              String?
  state                String?
  appointments         Appointment[]
  certificates         Certificate[]
  certificateTemplates CertificateTemplate[]
  classes              Class[]
  events               Event[]
  homeworks            Homework[]
  leaveRequests        LeaveRequest[]
  newsFeeds            NewsFeed[]
  students             Student[]
  studentHistories     StudentHistory[]
  transferCertificates TransferCertificate[]
  users                User[]
  admins               User[]                @relation("SchoolAdmin")
  teachers             User[]                @relation("SchoolTeacher")
}

model Class {
  name        String
  section     String?
  createdAt   DateTime     @default(now())
  id          String       @id @default(cuid())
  teacherId   String?
  schoolId    String
  attendances Attendance[]
  school      School       @relation(fields: [schoolId], references: [id])
  teacher     User?        @relation("TeacherClass", fields: [teacherId], references: [id])
  events      Event[]
  homeworks   Homework[]
  marks       Mark[]
  students    Student[]
}

model Student {
  createdAt            DateTime              @default(now())
  id                   String                @id @default(cuid())
  classId              String?
  aadhaarNo            String                @unique
  address              String?
  dob                  DateTime
  fatherName           String
  phoneNo              String
  rollNo               String?
  schoolId             String
  userId               String                @unique
  AdmissionNo          String?               @unique
  appointments         Appointment[]         @relation("StudentAppointments")
  attendances          Attendance[]
  certificates         Certificate[]
  eventRegistrations   EventRegistration[]
  homeworkSubmissions  HomeworkSubmission[]
  marks                Mark[]
  payments             Payment[]
  class                Class?                @relation(fields: [classId], references: [id])
  school               School                @relation(fields: [schoolId], references: [id])
  user                 User                  @relation(fields: [userId], references: [id])
  fee                  StudentFee?
  transferCertificates TransferCertificate[]
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Attendance {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  status    String
  studentId String
  classId   String
  createdAt DateTime @default(now())
  period    Int
  teacherId String
  updatedAt DateTime @updatedAt
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  teacher   User     @relation("TeacherAttendance", fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([studentId, classId, date, period])
  @@index([studentId, date])
  @@index([classId, date])
}

model Exam {
  id        String   @id @default(cuid())
  name      String
  schoolId  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  marks     Mark[]
}

model Mark {
  id          String   @id @default(cuid())
  subject     String
  marks       Float
  totalMarks  Float
  grade       String?
  suggestions String?
  studentId   String
  classId     String
  teacherId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  examId      String?
  class       Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  exam        Exam?    @relation(fields: [examId], references: [id])
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  teacher     User     @relation("TeacherMarks", fields: [teacherId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([classId])
  @@index([examId])
}

model Event {
  id            String              @id @default(cuid())
  title         String
  description   String
  createdAt     DateTime            @default(now())
  amount        Float?
  classId       String?
  eventDate     DateTime?
  photo         String?
  schoolId      String
  teacherId     String
  updatedAt     DateTime            @updatedAt
  class         Class?              @relation(fields: [classId], references: [id], onDelete: Cascade)
  school        School              @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacher       User                @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  registrations EventRegistration[]

  @@index([classId])
  @@index([teacherId])
}

model EventRegistration {
  id            String   @id @default(cuid())
  eventId       String
  studentId     String
  createdAt     DateTime @default(now())
  paymentId     String?
  paymentStatus String   @default("PENDING")
  event         Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  student       Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([eventId, studentId])
  @@index([studentId])
  @@index([eventId])
}

model NewsFeed {
  id          String   @id @default(cuid())
  title       String
  description String
  mediaUrl    String?
  mediaType   String?
  schoolId    String
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tagline     String?
  createdBy   User     @relation("NewsFeedCreator", fields: [createdById], references: [id], onDelete: Cascade)
  school      School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId])
  @@index([createdById])
}

model Homework {
  id          String               @id @default(cuid())
  title       String
  description String
  dueDate     DateTime?
  classId     String
  teacherId   String
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  schoolId    String
  subject     String
  class       Class                @relation(fields: [classId], references: [id], onDelete: Cascade)
  school      School               @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacher     User                 @relation("HomeworkCreator", fields: [teacherId], references: [id], onDelete: Cascade)
  submissions HomeworkSubmission[]

  @@index([classId])
  @@index([teacherId])
  @@index([schoolId])
}

model HomeworkSubmission {
  id          String   @id @default(cuid())
  homeworkId  String
  studentId   String
  fileUrl     String?
  submittedAt DateTime @default(now())
  content     String?
  grade       String?
  graded      Boolean  @default(false)
  homework    Homework @relation(fields: [homeworkId], references: [id], onDelete: Cascade)
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([homeworkId, studentId])
  @@index([studentId])
  @@index([homeworkId])
}

model CertificateTemplate {
  id           String        @id @default(cuid())
  name         String
  description  String?
  template     String
  imageUrl     String?
  schoolId     String
  createdById  String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  certificates Certificate[]
  createdBy    User          @relation("CertificateTemplateCreator", fields: [createdById], references: [id], onDelete: Cascade)
  school       School        @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId])
}

model Certificate {
  id             String              @id @default(cuid())
  title          String
  description    String?
  issuedDate     DateTime            @default(now())
  templateId     String
  studentId      String
  issuedById     String
  schoolId       String
  certificateUrl String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  issuedBy       User                @relation("CertificateIssuer", fields: [issuedById], references: [id], onDelete: Cascade)
  school         School              @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  student        Student             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  template       CertificateTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([templateId])
  @@index([schoolId])
}

model TransferCertificate {
  id            String    @id @default(cuid())
  reason        String?
  status        String    @default("PENDING")
  issuedDate    DateTime?
  studentId     String
  requestedById String?
  approvedById  String?
  schoolId      String
  tcDocumentUrl String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  approvedBy    User?     @relation("TCApprover", fields: [approvedById], references: [id])
  requestedBy   User?     @relation("TCRequester", fields: [requestedById], references: [id])
  school        School    @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  student       Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([schoolId])
  @@index([status])
}

model StudentHistory {
  id                String   @id @default(cuid())
  studentData       Json
  originalStudentId String   @unique
  schoolId          String
  deactivatedAt     DateTime @default(now())
  deactivatedBy     String?
  reason            String?
  createdAt         DateTime @default(now())
  school            School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId])
  @@index([originalStudentId])
}

model Appointment {
  id          String        @id @default(cuid())
  studentId   String
  teacherId   String
  schoolId    String
  requestedAt DateTime      @default(now())
  scheduledAt DateTime?
  status      String        @default("PENDING")
  note        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  school      School        @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  student     Student       @relation("StudentAppointments", fields: [studentId], references: [id], onDelete: Cascade)
  teacher     User          @relation("TeacherAppointments", fields: [teacherId], references: [id], onDelete: Cascade)
  messages    ChatMessage[]

  @@index([studentId])
  @@index([teacherId])
  @@index([schoolId])
  @@index([status])
}

model ChatMessage {
  id            String      @id @default(cuid())
  senderId      String
  createdAt     DateTime    @default(now())
  appointmentId String
  content       String
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  sender        User        @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([appointmentId])
  @@index([senderId])
}

model StudentFee {
  id              String   @id @default(cuid())
  studentId       String   @unique
  totalFee        Float
  discountPercent Float    @default(0)
  finalFee        Float
  amountPaid      Float    @default(0)
  remainingFee    Float
  installments    Int      @default(3)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
}

model Payment {
  id                String   @id @default(cuid())
  studentId         String
  amount            Float
  razorpayOrderId   String
  razorpayPaymentId String
  razorpaySignature String
  status            String   @default("SUCCESS")
  createdAt         DateTime @default(now())
  student           Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
}

enum Role {
  SUPERADMIN
  SCHOOLADMIN
  TEACHER
  STUDENT
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum LeaveType {
  CASUAL
  SICK
  PAID
  UNPAID
}
